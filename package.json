{
  "name": "Collector",
  "version": "3.1.0",
  "description": "An open-source package for creating interactive websites",
  "main": "main.js",
  "scripts": {
    "start": "electron . & npx prettier --write .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "coverage": "jest"
  },
  "repository": "https://github.com/scientific-open-solutions/collector",
  "keywords": [
    "Online Research",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Mikey Garcia, Dr. Nate Kornell, Tyson Kerr, Dr. Adam Blake, Dr. Anthony Haffey. Now developed by Scientific Open Solutions <team@sopsols.org>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "coffee-script": "~1.6.3",
    "electron": "^10.4.7",
    "electron-builder": "^22.11.7",
    "jest": "^26.6.3",
    "png-to-ico": "^2.1.2",
    "prettier": "2.3.2"
  },
  "build": {
    "appId": "yourappid",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "extraFiles": [
      "Default",
      "App/libraries",
      "App/Run.html",
      "App/Run.js",
      "App/Welcome.html"
    ],
    "files": [
      "**/*",
      "!Repositories/*",
      "!User/**",
      "!App/libraries/ace-master"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@octokit/auth": "^2.0.1",
    "@octokit/auth-token": "^2.4.5",
    "@octokit/rest": "^17.11.2",
    "command-exists": "^1.2.9",
    "electron-context-menu": "^2.5.2",
    "eval": "^0.1.6",
    "fs": "0.0.1-security",
    "fs-extra": "^9.1.0",
    "git-clone": "^0.1.0",
    "got": "^11.8.2",
    "normalize-url": "^6.0.1",
    "papaparse": "^5.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simple-git": "^2.38.0",
    "uglify-js": "^3.13.9"
  }
}
