{
  "name": "Collector",
  "version": "3.1.0",
  "description": "An open-source package for creating interactive websites",
  "main": "main.js",
  "scripts": {
    "start": "electron . & npx prettier --write .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "coverage": "jest"
  },
  "repository": "https://github.com/scientific-open-solutions/collector",
  "keywords": [
    "Online Research",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Mikey Garcia, Dr. Nate Kornell, Tyson Kerr, Dr. Adam Blake, Dr. Anthony Haffey. Now developed by Scientific Open Solutions <team@sopsols.org>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "coffee-script": "~1.6.3",
    "electron": "^13.1.8",
    "electron-builder": "^22.9.1",
    "jest": "^27.0.6",
    "png-to-ico": "^2.1.2",
    "prettier": "2.3.2"
  },
  "build": {
    "appId": "yourappid",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "extraFiles": [
      "extra",
      "Default/master.json"
    ],
    "files": [
      "**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false
    },
    "win": {
      "target": "nsis",
      "icon": "logos/collector.ico"
    }
  },
  "dependencies": {
    "@octokit/auth": "^2.0.1",
    "@octokit/auth-token": "^2.4.5",
    "@octokit/rest": "^18.9.0",
    "command-exists": "^1.2.9",
    "electron-context-menu": "^3.1.1",
    "eval": "^0.1.6",
    "fs": "0.0.1-security",
    "fs-extra": "^10.0.0",
    "git-clone": "^0.1.0",
    "got": "^11.8.2",
    "normalize-url": "^7.0.0",
    "papaparse": "^5.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simple-git": "^2.42.0",
    "uglify-js": "^3.14.1",
    "xmldom": "github:xmldom/xmldom#0.7.0"
  }
}
